{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('styles/projectColumn.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('scripts/column.js') }}"></script>
{% endblock %}

{% block body %}
    <p>{{project.name}}</p>
    <div class="columns-wrapper">
    {% for column in columns %}
        <div class="column"  id="column-{{ column.id }}">
            <div class="section-title">
                <div class="title">
                    {{ column.name }}
                </div>
                <a href="{{ path('delete_column', { id: column.id }) }}">
                    <i class="fa fa-trash"></i>
                </a>
            </div>
            {% for card in projectRepo.getCards(column.id) %}
            <div class="card-container">
                <div class="card-title">
                    {{ card.title }}
                </div>
                <div class="card-description">
                    {{ card.description }}
                </div>
            </div>
            {% endfor %}
            {{ form_start(cardForms[column.id]) }}
                {{ form_row(cardForms[column.id].title) }}
                {{ form_row(cardForms[column.id].description) }}
                {{ form_widget(cardForms[column.id].project_column) }} 
                <div class="d-flex align-items-center gap-2" style="margin-top: 10px;">
                    {{ form_row(cardForms[column.id].save) }}
                    <button class="btn btn-secondary btn-sm close-card-btn">X</button>
                </div>
            {{ form_end(cardForms[column.id]) }}

            <button class="btn btn-primary" style="margin-top: 10px;">Add new card</button>
        </div>
    {% endfor %}

        <div class='new-column-container' id='button_add_new_column'>
            <div class='d-none' data-id="{{ columns[0].project.id }}" id="columnContainer">
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_widget(form.project) }} 
                    <div class="d-flex align-items-center gap-2" style="margin-top: 10px;">
                        {{ form_row(form.save) }}
                        <button class="btn btn-secondary btn-sm close-column-btn">X</button>
                        </div>
                {{ form_end(form) }}
            </div>
            <div class="add-new-column">
                    <i class="fa fa-plus"></i> 
                    Add new column
            </div>
        </div>
    </div>
{% endblock %}
