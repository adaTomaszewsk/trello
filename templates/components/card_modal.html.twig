{% block stylesheets %}
    <link href="{{ asset('styles/card_modal.css') }}" rel="stylesheet">
{% endblock %}

<div class="modal fade" id="addCardModal-{{ column.id }}" tabindex="-1" aria-labelledby="addCardModalLabel-{{ column.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCardModalLabel-{{ column.id }}">Add New Card to {{ column.name }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(cardForm) }}
                    <div class="form-group">
                        {{ form_label(cardForm.title, null, { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(cardForm.title, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(cardForm.description, null, { 'label_attr': { 'class': 'form-label' } }) }}
                        {{ form_widget(cardForm.description, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    {{ form_widget(cardForm.project_column) }} 
                    <div class="d-flex align-items-center gap-2" style="margin-top: 10px;">
                        {{ form_widget(cardForm.save, { 'attr': { 'class': 'btn btn-primary' } }) }}
                        <button type="button" class="btn btn-secondary btn-sm close-card-btn" data-bs-dismiss="modal">X</button>
                    </div>
                {{ form_end(cardForm) }}
            </div>
        </div>
    </div>
</div>